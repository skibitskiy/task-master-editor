{
  "name": "@app/electron",
  "version": "0.1.0",
  "private": true,
  "main": "dist/entry.cjs",
  "type": "module",
  "scripts": {
    "predev": "npm --workspace @app/shared run build",
    "dev": "npm run build:dev && cross-env NODE_ENV=development electron dist/entry.cjs",
    "prebuild": "npm --workspace @app/shared run build",
    "build": "npm run build:prod",
    "build:prod": "rimraf dist && webpack --config webpack.config.cjs",
    "build:dev": "rimraf dist && cross-env NODE_ENV=development webpack --config webpack.config.cjs",
    "start": "electron .",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "npm run test:vitest && npm run test:legacy",
    "test:vitest": "vitest run",
    "test:legacy": "npm run build:dev >> /dev/null && node tests/run.js"
  },
  "dependencies": {
    "@app/shared": "*",
    "electron-log": "^5.1.4"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.12.12",
    "cross-env": "^10.0.0",
    "electron": "^30.0.0",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4",
    "wait-on": "^7.0.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  }
}
