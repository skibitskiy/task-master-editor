{
  "name": "@app/electron",
  "version": "0.1.0",
  "private": true,
  "main": "dist/entry.js",
  "type": "commonjs",
  "scripts": {
    "dev": "NODE_ENV=development tsc -w -p tsconfig.json --preserveWatchOutput & wait-on tcp:5173 && electron .",
