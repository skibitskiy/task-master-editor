{
  "name": "@app/electron",
  "version": "0.1.0",
  "private": true,
  "main": "dist-bundle/entry.cjs",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsc -w -p tsconfig.json --preserveWatchOutput & wait-on tcp:5173 && electron .",
    "build": "rimraf dist dist-bundle && tsc -p tsconfig.json && webpack --config webpack.config.cjs",
    "start": "electron .",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "npm run build && node tests/run.js"
  },
  "dependencies": {
    "@app/shared": "*",
    "electron-log": "^5.1.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "electron": "^30.0.0",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.4.5",
    "wait-on": "^7.0.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  }
}
