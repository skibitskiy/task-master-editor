{
  "name": "@app/renderer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "npm --workspace @app/shared run build",
    "dev": "cross-env NODE_ENV=development vite --mode development",
    "prebuild": "npm --workspace @app/shared run build",
    "build": "cross-env NODE_ENV=production vite build --mode production",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "vite build >> /dev/null && vitest run",
    "kill": "lsof -ti:5173 | xargs kill -9"
  },
  "devDependencies": {
    "@app/shared": "*",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "cross-env": "^10.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.4.5",
    "vite": "^5.4.20",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@gravity-ui/components": "^4.12.0",
    "@gravity-ui/markdown-editor": "^15.19.1",
    "@gravity-ui/uikit": "^7.21.0",
    "@openrouter/ai-sdk-provider": "^1.2.0",
    "@reduxjs/toolkit": "^2.9.0",
    "@tiptap/extension-mention": "^3.4.5",
    "@tiptap/react": "^3.4.5",
    "@tiptap/starter-kit": "^3.4.5",
    "@tiptap/suggestion": "^3.4.5",
    "@vitejs/plugin-react": "^5.0.2",
    "ai": "^5.0.41",
    "classnames": "^2.5.1",
    "dompurify": "^3.2.6",
    "highlight.js": "^11.11.1",
    "lodash": "^4.17.21",
    "lowlight": "^3.3.0",
    "marked": "^16.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tippy.js": "^6.3.7"
  }
}
