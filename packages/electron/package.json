    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "npm run build && node tests/run.js"
  },
  "dependencies": {
    "electron-log": "^5.1.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "electron": "^30.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5",
    "wait-on": "^7.0.1"
  }
}
