{
  "name": "task-master-editor",
  "version": "0.1.0",
  "private": true,
  "description": "Task Master Editor monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n RENDERER,MAIN -c cyan,magenta \"npm --workspace @app/renderer run dev\" \"npm --workspace @app/electron run dev\"",
    "build": "npm -ws run build",
    "typecheck": "npm -ws run typecheck",
    "test": "npm run test:unit & npm run test:e2e",
    "test:unit": "npm -ws run test",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "start": "npm --workspace @app/electron run start"
  },
  "keywords": [
    "electron",
    "typescript",
    "vite",
    "workspaces"
  ],
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3"
  }
}
